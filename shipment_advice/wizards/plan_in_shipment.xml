<odoo>
    <record id="wizard_plan_in_shipment_form" model="ir.ui.view">
        <field name="name">wizard.plan.in.shipment.form</field>
        <field name="model">wizard.plan.in.shipment</field>
        <field name="arch" type="xml">
            <form string="Plan in Shipment Advice">
                <group
                    name="pickings"
                    attrs="{'invisible': [('picking_ids', '=', [])]}"
                    string="Transfers to plan"
                >
                    <field
                        name="picking_ids"
                        nolabel="1"
                        context="{'tree_view_ref': 'shipment_advice.stock_picking_limited_view_tree'}"
                    />
                </group>
                <group name="shipment">
                    <field name="shipment_advice_id" />
                </group>
                <footer>
                    <button
                        name="action_plan"
                        type="object"
                        string="Validate"
                        class="btn-primary"
                    />
                    <button special="cancel" string="Cancel" class="btn-default" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
